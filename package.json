{
  "name": "todos",
  "scripts": {
    "dev": "pnpm --filter @todos/backend start & pnpm --filter @todos/web-react dev",
    "build": "pnpm --filter @todos/backend build && pnpm --filter @todos/web-react build",
    "build:angular": "pnpm --filter @todos/web-angular build",
    "dev:angular": "pnpm --filter @todos/web-angular start",
    "dev:react": "pnpm --filter @todos/web-react dev",
    "dev:server": "pnpm --filter @todos/backend start",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "typescript": "~5.6.2"
  },
  "packageManager": "pnpm@9.5.0"
}
